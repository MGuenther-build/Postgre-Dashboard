<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
			xmlns="http://javafx.com/javafx"
            fx:controller="controller.QueryController"
            stylesheets="@/css/styles.css"
            >

    <top>
        <HBox spacing="10" alignment="CENTER">
            <ComboBox fx:id="databaseComboBox" prefWidth="200" onAction="#onDatabaseSelected"/>
            <Button fx:id="showTablesButton" text="vorhandene Tabellen" onAction="#showTables"/>
            <Button fx:id="executeSQLButton" text="SQL ausführen" onAction="#executeSQL"/>
            <Button fx:id="importExcelButton" text="Excel importieren" onAction="#importExcel"/>
            <Button fx:id="exportButton" text="Exportieren" onAction="#exportExcelOrCSV"/>
            <ProgressBar fx:id="progressBar" prefWidth="300" progress="0.0" visible="false"/>
        </HBox>
    </top>

    <!-- CENTER: SQL Editor -->
    <center>
        <VBox spacing="10" alignment="CENTER">
            <Label text="SQL-Abfrage:" style="-fx-font-weight: bold;"/>
            <VBox fx:id="queryBox" style="-fx-border-color: lightgray; -fx-border-radius: 4;"/>
        </VBox>
    </center>

    <!-- BOTTOM: Result Table -->
    <bottom>
        <VBox spacing="10" alignment="CENTER">
            <Label text="Ergebnisse:" style="-fx-font-weight: bold;"/>
            <TableView fx:id="resultTable"/>
            <Label fx:id="infoLabel" text="" style="-fx-text-fill: red;"/>
            <Button text="zurück zum Dashboard" onAction="#backToMain"/>
        </VBox>
    </bottom>

</BorderPane>
